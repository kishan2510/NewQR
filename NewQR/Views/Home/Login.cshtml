@model NewQR.Models.Auth
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>QR Code Generator</title>
    <!-- Add CSS references here -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="row">
        <div class="col-md-4 offset-md-4 border shadow rounded-2 border-danger px-5 py-5 my-5">
            <section>
                <h3 class="text-center">LOGIN</h3>
                @{
                    if (ViewBag.Message != null)
                    {
                        <p style="color:red">@ViewBag.Message</p>
                    }
                }
                <form id="account" method="post">
                    <input asp-for="UserId" type="hidden" />
                    <div class="row">
                        <div class="col text-center">
                            <img width="100px" src="~/css/Media.jfif" alt="Logo" />
                        </div>
                    </div>

                    <div class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label fw-bold" for="inputEmail">Email</label>
                        <input asp-for="Email" id="inputEmail" type="email" class="form-control" placeholder="Name@gmail.com" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label fw-bold" for="inputPassword">Password</label>
                        <input asp-for="Password" id="inputPassword" type="password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 6-20 characters long.
                        </div>
                        @*  <span asp-validation-for="Password" class="text-danger"></span> *@
                    </div>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                    </div>
                    <div>
                        <button asp-action="Login" asp-controller="Home" id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a asp-action="Register" asp-controller="Home">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>
</html>
